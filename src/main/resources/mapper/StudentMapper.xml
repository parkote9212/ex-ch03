<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pgc.excrud.mapper.StudentMapper">
    <select id="findAll" resultType="com.pgc.excrud.domain.Student">
        SELECT * FROM student ORDER BY id DESC
    </select>
    <insert id="insert" parameterType="com.pgc.excrud.domain.Student"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO student (NAME, email, age)
        VALUES (#{name}, #{email}, #{age})
    </insert>

    <update id="update" parameterType="com.pgc.excrud.domain.Student">
        UPDATE student
        SET
        NAME = #{name},
        email = #{email},
        age = #{age}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM student
        WHERE id = #{id}
    </delete>
</mapper>